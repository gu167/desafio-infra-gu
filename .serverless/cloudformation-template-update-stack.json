{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ServerlessDeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    },
    "ServerlessDeploymentBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "ServerlessDeploymentBucket"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Action": "s3:*",
              "Effect": "Deny",
              "Principal": "*",
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:",
                      {
                        "Ref": "AWS::Partition"
                      },
                      ":s3:::",
                      {
                        "Ref": "ServerlessDeploymentBucket"
                      },
                      "/*"
                    ]
                  ]
                },
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:",
                      {
                        "Ref": "AWS::Partition"
                      },
                      ":s3:::",
                      {
                        "Ref": "ServerlessDeploymentBucket"
                      }
                    ]
                  ]
                }
              ],
              "Condition": {
                "Bool": {
                  "aws:SecureTransport": false
                }
              }
            }
          ]
        }
      }
    },
    "TableTest": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "desafio-infra-gu-dev-table-test",
        "AttributeDefinitions": [
          {
            "AttributeName": "pk",
            "AttributeType": "S"
          },
          {
            "AttributeName": "sk",
            "AttributeType": "S"
          },
          {
            "AttributeName": "type",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "pk",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "sk",
            "KeyType": "RANGE"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "GlobalSecondaryIndexes": [
          {
            "IndexName": "invertedIndex",
            "KeySchema": [
              {
                "AttributeName": "sk",
                "KeyType": "HASH"
              },
              {
                "AttributeName": "pk",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            }
          },
          {
            "IndexName": "typeIndex",
            "KeySchema": [
              {
                "AttributeName": "type",
                "KeyType": "HASH"
              },
              {
                "AttributeName": "pk",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            }
          }
        ]
      }
    },
    "Table": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "desafio-infra-gu-dev-table",
        "AttributeDefinitions": [
          {
            "AttributeName": "pk",
            "AttributeType": "S"
          },
          {
            "AttributeName": "sk",
            "AttributeType": "S"
          },
          {
            "AttributeName": "type",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "pk",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "sk",
            "KeyType": "RANGE"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "GlobalSecondaryIndexes": [
          {
            "IndexName": "invertedIndex",
            "KeySchema": [
              {
                "AttributeName": "sk",
                "KeyType": "HASH"
              },
              {
                "AttributeName": "pk",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            }
          },
          {
            "IndexName": "typeIndex",
            "KeySchema": [
              {
                "AttributeName": "type",
                "KeyType": "HASH"
              },
              {
                "AttributeName": "pk",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            }
          }
        ]
      }
    },
    "TestParam": {
      "Type": "AWS::SSM::Parameter",
      "Properties": {
        "Name": "/desafio-infra-gu/TEST_PARAM",
        "Type": "String",
        "Value": "test"
      }
    },
    "TableName": {
      "Type": "AWS::SSM::Parameter",
      "Properties": {
        "Name": "/desafio-infra-gu/TABLE_NAME",
        "Type": "String",
        "Value": "desafio-infra-gu-dev-table"
      }
    },
    "TableARN": {
      "Type": "AWS::SSM::Parameter",
      "Properties": {
        "Name": "/desafio-infra-gu/TABLE_ARN",
        "Type": "String",
        "Value": {
          "Fn::GetAtt": [
            "Table",
            "Arn"
          ]
        }
      }
    },
    "TableTestName": {
      "Type": "AWS::SSM::Parameter",
      "Properties": {
        "Name": "/desafio-infra-gu/TABLE_TEST_NAME",
        "Type": "String",
        "Value": "desafio-infra-gu-dev-table-test"
      }
    },
    "TableTestARN": {
      "Type": "AWS::SSM::Parameter",
      "Properties": {
        "Name": "/desafio-infra-gu/TABLE_TEST_ARN",
        "Type": "String",
        "Value": {
          "Fn::GetAtt": [
            "TableTest",
            "Arn"
          ]
        }
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      },
      "Export": {
        "Name": "sls-desafio-infra-gu-dev-ServerlessDeploymentBucketName"
      }
    }
  }
}